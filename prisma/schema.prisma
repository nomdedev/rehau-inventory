generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int         @id @default(autoincrement())
  nombre    String
  email     String      @unique
  password  String
  rol       String
  auditoria Auditoria[]
  ordenes   Orden[]
}

model Inventario {
  id           Int         @id @default(autoincrement())
  codigo       String      @unique
  descripcion  String
  cantidad     Int
  reservado    Int         @default(0)
  ubicacion    String
  fechaIngreso DateTime    @default(now())
  obraId       Int?
  obra         Obra?       @relation(fields: [obraId], references: [id])
  ordenItems   OrdenItem[]
}

model Obra {
  id          Int          @id @default(autoincrement())
  nombre      String
  cliente     String
  direccion   String
  estado      String
  fechaInicio DateTime
  fechaFin    DateTime?
  inventario  Inventario[]
}

model Orden {
  id        Int         @id @default(autoincrement())
  fecha     DateTime    @default(now())
  proveedor String
  estado    String
  usuarioId Int
  usuario   Usuario     @relation(fields: [usuarioId], references: [id])
  items     OrdenItem[]
}

model OrdenItem {
  id         Int        @id @default(autoincrement())
  ordenId    Int
  orden      Orden      @relation(fields: [ordenId], references: [id])
  materialId Int
  material   Inventario @relation(fields: [materialId], references: [id])
  cantidad   Int
}

model Auditoria {
  id          Int      @id @default(autoincrement())
  usuarioId   Int
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  accion      String
  modulo      String
  descripcion String
  fecha       DateTime @default(now())
}
